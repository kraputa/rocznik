.scroll-panel-header
  = link_to "Nowe wydanie", new_issue_path, class: %w{btn btn-default btn-sm pull-right}
  %h3.scroll-panel-title Wydania
.scroll-panel-body
  %table.table.table-hover.table-admin
    %thead
      %tr
        %th Year
        %th Volume
    %tbody
      -if @issues
        -@issues.each do |issue|
          %tr.table-row-link
          %td= link_to issue.year, issue
         
          %td= issue.volume
          %td.text-right
            = destroy_button(issue,"Czy na pewno chcesz usunąć ten numer")
